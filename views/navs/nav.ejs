    <script>
        const responsiveBtn = document.getElementById("responsive")
        const userMenuBtn = document.getElementById("userMenuBtn")

        const sections = document.getElementById("sections")
        const userMenu = document.getElementById("userMenu")

        let responsiveActive = false
        let userMenuActive = false

        responsiveBtn.addEventListener("click",function(){
            if(responsiveActive){
                sections.style.display = "none"
                responsiveActive = false
            }else{
                sections.style.display = "block"
                userMenu.style.display = "none"
                responsiveActive = true
                userMenuActive = false
            }
        })

        userMenuBtn.addEventListener("click",function(){
            if(userMenuActive){
                userMenu.style.display = "none"
                userMenuActive = false
            }else{
                userMenu.style.display = "flex"
                userMenuActive = true
                if(sections.getAttribute("style").indexOf("top:") == -1){
                    sections.style.display = "none"
                    responsiveActive = false
                }
            }
        })
